# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/aiguardian"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/aiguardian_test"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=8000
HOST="0.0.0.0"
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# External APIs
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_SAFE_BROWSING_API_KEY="your-google-safe-browsing-api-key"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Security
HELMET_ENABLED=true
CSP_ENABLED=true

# Project NANDA Integration
NANDA_ENABLED=false
NANDA_REGISTRY_URL="https://registry.projectnanda.org"
NANDA_AGENT_ID="aiguardian-safety-hub"
NANDA_DATA_SHARING=false
NANDA_CONSENT_REQUIRED=true
NANDA_ANONYMIZATION=true 